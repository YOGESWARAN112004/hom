# Database Configuration
DATABASE_URL=postgres://user:password@host:5432/dbname

# Authentication
# Generate a secret with: openssl rand -base64 32
JWT_SECRET=your_secure_random_string_here

# App URL (Update this after deploying)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Razorpay Payments
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...

# Email Server (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Houses of Medusa <no-reply@housesofmedusa.com>

# Object Storage (S3 - Optional, used for uploads)
# If not set, uploads will fail on Vercel as it has a read-only filesystem (except /tmp)
# For production, use AWS S3, Cloudflare R2, or similar.
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_BUCKET_NAME=...
